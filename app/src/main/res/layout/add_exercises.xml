<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    >





    <EditText
        android:id="@+id/ex_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Enter Exercise Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ex_Weight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex_Name"
        android:layout_toEndOf="@+id/ex_Set"
        android:layout_toRightOf="@+id/ex_Set"
        android:ems="10"
        android:hint="Weight"
        android:inputType="number" />

    <EditText
        android:id="@+id/ex_Reps"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex_Name"
        android:layout_toEndOf="@+id/ex_Weight"
        android:layout_toRightOf="@+id/ex_Weight"
        android:ems="10"
        android:hint="Reps"
        android:inputType="number" />

    <EditText
        android:id="@+id/ex_Set"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Set"
        android:inputType="number" />

    <EditText
        android:id="@+id/ex_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Set"
        android:inputType="number" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:onClick="onClick"
        />


    <ListView
        android:id="@+id/ex_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ex_Weight" />


</RelativeLayout>